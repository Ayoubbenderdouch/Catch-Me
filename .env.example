APP_NAME="Catch Me"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://catchme.app
APP_TIMEZONE=UTC
APP_LOCALE=fr
APP_FALLBACK_LOCALE=ar

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=catchme_app
DB_USERNAME=root
DB_PASSWORD=

# Laravel Vapor Configuration
VAPOR_ARTIFACT_NAME=catchme-app
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcasting, Cache, Queue, Session
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
CACHE_PREFIX=catchme
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=sqs
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@catchme.app"
MAIL_FROM_NAME="${APP_NAME}"

# Firebase Cloud Messaging (FCM)
FCM_SERVER_KEY=
FCM_SENDER_ID=
FIREBASE_CREDENTIALS=storage/firebase-credentials.json

# App Specific Settings
DEFAULT_MAX_DISTANCE=50
GHOST_MODE_ENABLED=true
LOCATION_UPDATE_INTERVAL=30

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,catchme.app
SANCTUM_EXPIRATION=null

# Google Maps API (for admin dashboard)
GOOGLE_MAPS_API_KEY=

# Swagger/OpenAPI
L5_SWAGGER_CONST_HOST=https://api.catchme.app

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Security
HASH_VERIFY=true
BCRYPT_ROUNDS=12

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
