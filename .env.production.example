APP_NAME="Catch Me"
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_DEBUG=false
APP_URL=https://api.catchme.app
APP_TIMEZONE=UTC
APP_LOCALE=fr
APP_FALLBACK_LOCALE=ar

# Database Configuration (AWS RDS)
DB_CONNECTION=mysql
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=catchme_production
DB_USERNAME=admin
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Laravel Vapor Configuration
VAPOR_ARTIFACT_NAME=catchme-app
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=catchme-production-assets
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcasting, Cache, Queue, Session
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
CACHE_PREFIX=catchme
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=sqs
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Redis Configuration (AWS ElastiCache)
REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# Mail Configuration (AWS SES or other)
MAIL_MAILER=ses
MAIL_HOST=email-smtp.us-east-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=YOUR_SES_SMTP_USERNAME
MAIL_PASSWORD=YOUR_SES_SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@catchme.app"
MAIL_FROM_NAME="${APP_NAME}"

# Firebase Cloud Messaging (FCM)
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY
FCM_SENDER_ID=YOUR_FCM_SENDER_ID
FIREBASE_CREDENTIALS=s3://catchme-production-assets/firebase-credentials.json

# App Specific Settings
DEFAULT_MAX_DISTANCE=50
GHOST_MODE_ENABLED=true
LOCATION_UPDATE_INTERVAL=30

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=catchme.app,api.catchme.app,admin.catchme.app
SANCTUM_EXPIRATION=null

# Google Maps API (for admin dashboard)
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Swagger/OpenAPI
L5_SWAGGER_CONST_HOST=https://api.catchme.app

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
HASH_VERIFY=true
BCRYPT_ROUNDS=12

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# IMPORTANT: Generate a new APP_KEY for production!
# Run: php artisan key:generate --show
# Then copy the key here
